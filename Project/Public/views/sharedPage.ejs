<!DOCTYPE html>
<html>
<head>
  <title>Shared Page</title>
  <!-- Add Bootstrap CSS link here -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
</head>
<body>

<!-- Header Section -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <a class="navbar-brand" href="/dashboard">My App</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/dashboard">Go to Dashboard</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- Main Content Section -->
<div class="container"> <h2>Folders</h2>
    <div class="row">
      <% folders.forEach(folder => { %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <div class="card mb-4" >
            <div class="card-body">
              <h5 class="card-title"><%= folder.name %></h5>
              <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="folderActionsDropdown" data-toggle="dropdown">
                  Actions
                </button>
                <div class="dropdown-menu" aria-labelledby="folderActionsDropdown">
                  <a class="dropdown-item folderitem" id="<%= folder._id %>" >Open</a>
                  <a class="dropdown-item" href="/folders/<%= folder._id %>/download">Download</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

<div class="container">
    <h2>Files</h2>
    <div class="row">
      <% files.forEach(file => { %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title"><%= file.filename %></h5>
              

              <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="fileActionsDropdown" data-toggle="dropdown">
                  Actions
                </button>
                <div class="dropdown-menu" aria-labelledby="fileActionsDropdown">
                  <a class="dropdown-item" href="/files/<%= file._id %>/download">Download</a>
                </div>
              </div>
              

            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>

  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

  <script src="../js/display.js" ></script>
  <script src="../js/sharing.js"></script>

</body>
</html>
