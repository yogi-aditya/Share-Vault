<!DOCTYPE html>
<html>
<head>
  <title>Dashboard - Your Website</title>
  
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/dashboard.css">
  <link rel="stylesheet" href="/css/publicLinkDialog.css">


</head>
<body>
  <%- include('header') %>

  <main>
    <div class="container">
      <!-- <h1>Welcome <%= user.name %></h1> -->
      <div class="dashboard-content">
        
        <p id="profileContainer"></p>
      </div>
    </div>

    <div id="publicLinkDialog" class="dialog">
      <span id="publicLink"></span>
      <button class="closeBtn" onclick="closePublicLinkDialog()">Close</button>
    </div>


    <!-- <div id="dashboard">  -->
      <!-- Folders Section -->
      <!-- <h2>Folders</h2> -->
      <!-- <ul id="folderList"></ul> -->
  
      <!-- Files Section -->
      <!-- <h2>Files</h2> -->
      <!-- <ul id="fileList"></ul> -->
    <!-- </div> -->
  <div class="container"> <h2>Folders</h2>
  <div class="row">
    <% folders.forEach(folder => { %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card mb-4" >
          <div class="card-body">
            <h5 class="card-title"><%= folder.name %></h5>
            <div class="dropdown">
              <button class="btn btn-secondary dropdown-toggle" type="button" id="folderActionsDropdown" data-toggle="dropdown">
                Actions
              </button>
              <div class="dropdown-menu" aria-labelledby="folderActionsDropdown">
                <a class="dropdown-item folderitem" id="<%= folder._id %>" >Open</a>
                <a class="dropdown-item"  onclick="moveFolderToBin('<%= folder._id %>')" >Move to Recycle Bin</a>
                <a class="dropdown-item" onclick="shareFolder('<%= folder._id %>')">Share</a>
                <a class="dropdown-item" onclick="folderSharedUsers('<%= folder._id %>')">Get Shared Users</a>
                <a class="dropdown-item" href="/folders/<%= folder._id %>/download">Download</a>
                <a class="dropdown-item public-link-btn"  onclick="generateFolderPublicLink('<%= folder.publicLinkToken %>')">Get Public Link</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>



<div class="container">
  <h2>Files</h2>
  <div class="row">
    <% files.forEach(file => { %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= file.filename %></h5>
            <div class="dropdown">
              <button class="btn btn-secondary dropdown-toggle" type="button" id="fileActionsDropdown" data-toggle="dropdown">
                Actions
              </button>
              <div class="dropdown-menu" aria-labelledby="fileActionsDropdown">
                <a class="dropdown-item" href="/files/<%= file._id %>/download">Download</a>
                <a class="dropdown-item"  onclick="moveFileToBin('<%= file._id %>')" >Move to Recycle Bin</a>
                <a class="dropdown-item" onclick="deleteFile('<%= file._id %>')">Delete</a>
                <a class="dropdown-item" onclick="shareItem('<%= file._id %>')">Share</a>
                <a class="dropdown-item" onclick="fileSharedUsers('<%= file._id %>')">Get Shared Users</a>
                <a class="dropdown-item public-link-btn"  onclick="generateFilePublicLink('<%= file.publicLinkToken %>')">Public Link</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

 
  
  

  

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>

  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

  <script src="../js/dashboard.js"></script>
  <script src="../js/sharing.js"></script>
  <script src="../js/fileUpload.js"></script>
  <script src="../js/display.js" ></script>
  <script src="../js/publicLink.js"></script>
  
 

  
</body>
</html>



